{
  "name": "simple-ts-node",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev --ignore-watch ./node_modules --transpile-only --respawn -r dotenv/config -r tsconfig-paths/register ./src/server.ts",
    "build": "tsc -p .",
    "start": "yarn install && yarn build && pm2 start pm2.json --no-daemon",
    "prepare": "husky install",
    "format": "pretty-quick --staged",
    "lint": "eslint --fix ./src/**/*.ts"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.4.2",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.29.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard": "^16.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-unused-imports": "^1.0.1",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^5.3.0",
    "firebase": "^8.9.0",
    "firebase-admin": "^9.11.0",
    "husky": "^7.0.1",
    "morgan": "^1.10.0",
    "pm2": "^5.1.0",
    "prettier": "^2.3.2",
    "prettier-quick": "^0.0.5",
    "pretty-quick": "^3.1.1",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "dayjs": "^1.10.6",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "lodash": "^4.17.21"
  }
}
