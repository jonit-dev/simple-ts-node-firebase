{
  "compilerOptions": {
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "target": "es5",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@insta-shared/*": ["../insta-shared/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts"],
  "references": [
    {
      "path": "../insta-shared"
    }
  ]
}
