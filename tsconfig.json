{
  "compilerOptions": {
    "emitDecoratorMetadata": true, // TypeDi
    "experimentalDecorators": true, // TypeDi
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "target": "es5",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "@providers/*": ["providers/*"],
      "@useCases/*": ["useCases/*"],
      "@entities/*": ["entities/*"],
      "@insta-shared/*": ["../../insta-shared/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*"]
}
